<!DOCTYPE html>
<!-- Template by Quackit.com -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %} The Broker {% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Clean responsive bootstrap website template">
    <meta name="author" content="">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    {% block stylesheets %}

        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet">

        {#<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">#}
        <!-- styles -->
        <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,700" rel="stylesheet">

        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/color/default.css') }}" rel="stylesheet">

    {% endblock %}

    <!-- fav and touch icons -->
    <link rel="shortcut icon" href="{{ asset('assets/ico/favicon.ico') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
          href="{{ asset('assets/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
          href="{{ asset('assets/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72"
          href="{{ asset('assets/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('assets/ico/apple-touch-icon-57-precomposed.png') }}">

</head>
<body>


<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="/">THE BROKER</a>
            </div>
        <ul class="nav topnav">
            <li><a href="{{ path('homepage') }}">Home</a></li>
{#            <li><a href="{{ path('about') }}">About</a></li>#}
{#            <li><a href="{{ path('contact') }}">Contact</a></li>#}
            {% if is_granted('ROLE_USER') and is_granted('ROLE_ADMIN') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:mainMenu') }} </li>
            {% elseif is_granted('ROLE_CUSTOMER') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:customerMenu') }} </li>
            {% elseif is_granted('ROLE_ADMIN') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:adminMenu') }} </li>
            {% elseif is_granted('ROLE_DRIVER') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:driverMenu') }} </li>
            {% endif %}

            {% if is_granted('ROLE_USER') %}
                <li class="right">
                    <a class="login_btn" href="/admin/logout"><i class="fa fa-sign-out"></i>
                        LogOut</a>
                </li>
            {% else %}
                <li class="right-side">
                    <a class="login_btn" href="/admin/login"><i class="fa fa-sign-in"></i>
                        Login</a>
                </li>
            {% endif %}
        </ul>
        </div>

    </nav>
</header>
<br>

<!-- Content -->

        <div class="col-lg-12">
            {% for msg in app.session.flashBag.get('success') %}

                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
            {% block body %}


            {% endblock %}
        </div>



<!-- Footer
================================================== -->
<footer class="footer">
    <div class="subfooter">
        <div class="container">
            <div class="row">
                <div class="span6">
                    <p>
                        &copy; Plato - All right reserved
                    </p>
                </div>
                <div class="span6">
                    <div class="pull-right">
                        <div class="credits">
                            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>


{% block javascripts %}

    <script src="{{ asset('assets/js/bootstrap.js') }}"></script>

    <!-- Template Custom Javascript File -->
    <script src="assets/js/custom.js"></script>
{% endblock %}


</body>
</html>
