<!DOCTYPE html>
<!-- Template by Quackit.com -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %} The Broker {% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Clean responsive bootstrap website template">
    <meta name="author" content="">

    {% block stylesheets %}
        <!-- bootstrap.min css -->
        <link rel="stylesheet" href="{{ asset('assets/css/plugin/bootstrap/dist/css/bootstrap.min.css') }}">
        <!-- Animate.css -->
        <!-- styles -->
        <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">

    {% endblock %}
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    <!-- fav and touch icons -->
    <link rel="shortcut icon" href="{{ asset('assets/ico/favicon.ico') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
          href="{{ asset('assets/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
          href="{{ asset('assets/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72"
          href="{{ asset('assets/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('assets/ico/apple-touch-icon-57-precomposed.png') }}">

</head>
<body>


<header  id="body" >
    <nav class=" navbar-expand-lg navbar-dark bg-dark navbar-inner">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Broker GMA</a>
            </div>
        <ul class="nav navbar-nav navigation-menu" id="top_menu">
            <li><a href="{{ path('homepage') }}">Главная</a></li>
{#            <li><a href="{{ path('about') }}">About</a></li>#}
{#            <li><a href="{{ path('contact') }}">Contact</a></li>#}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:adminMenu') }} </li>
            {% elseif is_granted('ROLE_CUSTOMER') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:customerMenu') }} </li>
            {% elseif is_granted('ROLE_USER') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:mainMenu') }} </li>
            {% elseif is_granted('ROLE_DRIVER') %}
                <li class="color_menu"> {{ knp_menu_render('AppBundle:Builder:driverMenu') }} </li>
            {% endif %}

            {% if is_granted('ROLE_USER') %}
                <li class="right">
                    <a class="login_btn" href="/admin/logout"><i class="fa fa-sign-out-alt"></i>
                        Выйти</a>
                </li>
            {% else %}
                <li class="right-side">
                    <a class="login_btn" href="/admin/login"><i class="fa fa-sign-in"></i>
                        Вход</a>
                </li>
                <li class="right-side">
                    <a class="login_btn" href="/register"><i class="fa fa-user-plus"></i>
                        Регистрация</a>
                </li>
            {% endif %}
        </ul>
        </div>
    </nav>
</header>

<!-- Content -->

            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
            {% block body %}
            {% endblock %}


