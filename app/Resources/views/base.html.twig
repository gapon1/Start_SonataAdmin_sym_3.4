</footer> <!-- end footer -->


{% block javascripts %}

    <script src="{{ asset('assets/js/bootstrap.js') }}"></script>

    <!-- Template Custom Javascript File -->
    <script src="assets/js/custom.js"></script>
{% endblock %}


</body>
</html>
