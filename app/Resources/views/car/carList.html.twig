{% extends 'base.html.twig' %}

{% block title %} Taxo Park {% endblock %}

{% block body %}

    <h2 class="genus-name">Cars List</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Car</th>
            <th>Car type</th>
            <th>Car Description</th>
            <th>Car Driver</th>
        </tr>
        </thead>

        <tbody>
        {% for car in cars %}
            <tr>
                <td>
                    <b><a href="{{ path('car_show',{'carName': car.carName}) }}">{{ car.carName }}</a></b>
                </td>
                <td>{{ car.CarType }}</td>
                <td>{{ car.CarDiscript }}</td>
                {#<td>{{ car.DriverId }}</td>#}
                <td>
                    <b> <a href="{{ path('user_show',{'userName': car.DriverId }) }}">{{ car.DriverId }}</a></b>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <br/>
    <div class="pagination text-center">
        {{ knp_pagination_render(cars) }}
    </div>

{% endblock %}
